{
  "include": [
    "./src/**/*.ts",
    "node_modules/vitest/globals.d.ts"
  ],
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "target": "es2022",
    "moduleResolution": "node",

    "rootDir": "./src",
    "outDir": "build",

    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true
  }
}
